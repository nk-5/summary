# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'summary' do
  use_frameworks!

  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxDataSources'

  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/DynamicLinks'
  pod 'Firebase/AdMob'

  # Facebook
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'FacebookShare'

  # Form
  pod 'Eureka'

  target 'summaryTests' do
    inherit! :search_paths
  end

  target 'summaryUITests' do
    inherit! :search_paths
  end

end
